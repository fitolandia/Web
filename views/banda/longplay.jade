        //accion post para asociar con la BD y multipart para cargar la imagen
        form(method="post", action="/discografia", style="margin-top:1.5em;", enctype="multipart/form-data")
            div(class="form-group")
                label Disco
                input.form-control(type='text', name="titulo", placeholder='Nombre del Disco', class="form-control")
            div(class="form-group")
                label Cargar temas
                input(type='file' name='music_avatar')
            div(class="form-group")
                label Tapa del disco
                input(type='file' name='image_avatar')
            div(class="form-group")
                label Disco
                input.form-control(type='text', name= "descripcion", placeholder='Descripci√≥n...')
            div(class="form-group text-rigth")
                button.btn.btn-info(type='submit') Guardar



